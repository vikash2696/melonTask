            style='text-transform:uppercase' align="center" 
            value="<?php echo $word[$i] ?>" readonly>
        <?php } else { ?>
        <input type="text"  id="input_id_<?php echo $i;?>" class="word_input first_last_input" maxlength="1" 
            style='text-transform:uppercase' align="center" 
            value="" 
            onkeydown="return alphaOnly(event,'<?php echo $word[$i]; ?>',<?php echo $i;?>);">
    <?php } } ?>
</div>