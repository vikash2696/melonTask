$word = str_split($this->word['word']);
$letterCount = count($word);
?>
<div class="jumbotron" style="text-align:center">
    <?php
    for ($i = 0; $i < $letterCount; $i++) {
        if ($i == 0 || $i == $letterCount-1) { ?>
